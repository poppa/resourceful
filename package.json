{
  "name": "resourceful",
  "version": "0.0.1",
  "repository": "https://github.com/poppa/resourceful.git",
  "description": "Keep track of project resources",
  "author": {
    "name": "Pontus Ã–stlund",
    "email": "poppanator@gmail.com",
    "url": "https://github.com/poppa"
  },
  "license": "MIT",
  "private": true,
  "main": "./index.js",
  "scripts": {
    "start": "ELECTRON_ENV=production electron .",
    "start:dev": "ELECTRON_ENV=development electron .",
    "dev:app": "yarn clean:app && tsc -w",
    "dev:ui": "yarn clean:ui && parcel watch --hmr-port 8798 --hmr-hostname localhost -d ./dist/ui ./src/ui/app.html --public-url .",
    "build": "yarn build:app && yarn build:ui",
    "build:app": "yarn clean:app && tsc -p ./tsconfig.json",
    "build:ui": "yarn clean:ui && parcel build --target=electron -d ./dist/ui ./src/ui/app.html --public-url .",
    "clean": "rimraf dist",
    "clean:app": "rimraf dist/app",
    "clean:ui": "rimraf dist/ui",
    "clean:all": "yarn clean && rimraf .cache && rimraf node_modules",
    "svgo": "svgo src/ui/svg/**/*.svg",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder"
  },
  "resolutions": {
    "typescript": "4.1.3",
    "@types/react": "^16.9.34"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.14",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.9.14",
    "@material-ui/system": "^4.9.14",
    "@material-ui/utils": "^4.9.12",
    "@svgr/parcel-plugin-svgr": "^5.4.0",
    "axios": "^0.21.2",
    "babel-runtime": "^6.26.0",
    "cheerio": "1.0.0-rc.3",
    "debug": "^4.1.1",
    "deepmerge": "^4.2.2",
    "electron-store": "^5.2.0",
    "getenv": "^1.0.0",
    "mime-types": "^2.1.27",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "pdf-parse": "^1.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-draggable": "^4.4.3",
    "react-hot-loader": "^4.12.20",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "safe-result": "^1.0.0-beta.2",
    "source-map-support": "^0.5.19",
    "tslib": "^1.11.1",
    "uuid": "^7.0.3"
  },
  "build": {
    "appId": "org.poppanator.resourceful",
    "productName": "Resourceful",
    "files": "assets/**/*.png",
    "mac": {
      "category": "develoment tool"
    }
  },
  "app": {
    "dest": "./dist",
    "productName": "Resourceful",
    "srcPaths": {
      "scss": "src/scss/**/*.scss",
      "img": "src/img/**/*.[png,svg]",
      "html": "src/**/*.html"
    }
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.22",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/getenv": "^1.0.0",
    "@types/jest": "^25.2.1",
    "@types/mime-types": "^2.1.0",
    "@types/node": "12.12.37",
    "@types/pdf-parse": "^1.1.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-router": "^5.1.5",
    "@types/react-router-dom": "^5.1.4",
    "@types/source-map-support": "^0.5.1",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-inline-react-svg": "^1.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2019": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^9.1.2",
    "bable-loader": "^0.0.1-security",
    "electron": "^13.6.6",
    "electron-builder": "^22.8.0",
    "electron-reload": "^1.5.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "express": "^4.17.1",
    "jest": "^25.4.0",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.5",
    "svgo": "^1.3.2",
    "ts-jest": "^25.4.0",
    "typescript": "^4.1.3"
  }
}
